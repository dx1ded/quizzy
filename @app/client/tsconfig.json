{
  "extends": "@quizzy/eslint-config-default/tsconfig.json",
  "compilerOptions": {
    "baseUrl": "./src",
    "lib": ["ES2021", "DOM", "DOM.Iterable"],
    "jsx": "react-jsx",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "allowSyntheticDefaultImports": true,
    "paths": {
      "@mui/styled-engine": ["./node_modules/@mui/styled-engine-sc"],
      "app/*": ["app/*"],
      "assets/*": ["assets/*"],
      "features/*": ["features/*"],
      "pages/*": ["pages/*"],
      "shared/*": ["shared/*"],
      "widgets/*": ["widgets/*"],
      "entities/*": ["entities/*"],
    }
  },
  "include": ["src/**/*"],
}
